        <TextView android:textSize="12sp" android:id="@+id/encrypted_device_info_device_id" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="a device id"/>
        <TextView android:textSize="12sp" android:textStyle="bold" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/encryption_information_device_key"/>
        <TextView android:textSize="12sp" android:id="@+id/encrypted_device_info_device_key" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="a device key"/>
